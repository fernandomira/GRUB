<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.proyecto.FXPRINCIPALControllers">
   <children>
      <!-- Contenedor principal -->
      <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <!-- Título -->
            <HBox alignment="CENTER" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">
               <children>
                  <Label text="GESTIÓN DE ESTUDIANTES" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <!-- Panel de formulario -->
            <VBox spacing="15.0" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">
               <children>
                  <Label text="Información del Estudiante" textFill="#34495e">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <!-- Campos de entrada -->
                  <HBox spacing="15.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Nombre:" textFill="#34495e">
                                 <font>
                                    <Font name="System" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="nombreField" promptText="Ingrese el nombre" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Apellidos:" textFill="#34495e">
                                 <font>
                                    <Font name="System" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="apellidosField" promptText="Ingrese los apellidos" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10; -fx-font-size: 14;">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Sexo:" textFill="#34495e">
                                 <font>
                                    <Font name="System" size="12.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="sexoComboBox" prefWidth="150.0" promptText="Seleccionar" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-background-radius: 8;" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <!-- Botones de acción -->
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Button onAction="#agregarEstudiante" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);" text="Agregar">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                        <Button onAction="#actualizarEstudiante" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);" text="Actualizar">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                        <Button onAction="#eliminarEstudiante" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);" text="Eliminar">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                        <Button onAction="#limpiarCampos" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);" text="Limpiar">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Tabla de estudiantes -->
            <VBox spacing="10.0" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Lista de Estudiantes" textFill="#34495e">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <TableView fx:id="tablaEstudiantes" style="-fx-background-color: transparent; -fx-table-cell-border-color: #ecf0f1;" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colId" minWidth="60.0" prefWidth="80.0" style="-fx-alignment: CENTER;" text="ID" />
                        <TableColumn fx:id="colNombre" minWidth="150.0" prefWidth="200.0" text="Nombre" />
                        <TableColumn fx:id="colApellidos" minWidth="200.0" prefWidth="250.0" text="Apellidos" />
                        <TableColumn fx:id="colSexo" minWidth="100.0" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Sexo" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>